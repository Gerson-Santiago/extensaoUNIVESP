{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2024",
    "checkJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": ".cache/tsc.tsbuildinfo",
    "lib": ["es2024", "dom", "dom.iterable"],
    "types": ["chrome", "jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@features/*": ["features/*"],
      "@shared/*": ["shared/*"],
      "@tests/*": ["tests/*"],
      "@sidepanel/*": ["sidepanel/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "features/**/*",
    "shared/**/*",
    "popup/**/*",
    "sidepanel/**/*",
    "scripts/**/*",
    "tests/**/*",
    "jsconfig.json",
    "manifest.json"
  ]
}
