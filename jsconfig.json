{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "checkJs": true,
    "lib": ["es2020", "dom", "dom.iterable"],
    "types": ["chrome", "jest", "node"],
    "baseUrl": ".",
    "paths": {
