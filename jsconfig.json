{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2024",
    "checkJs": true,
    "skipLibCheck": true,
    "lib": ["es2024", "dom", "dom.iterable"],
    "types": ["chrome", "jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@features/*": ["features/*"],
      "@shared/*": ["shared/*"],
      "@tests/*": ["tests/*"],
      "@sidepanel/*": ["sidepanel/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist", "coverage"]
}
