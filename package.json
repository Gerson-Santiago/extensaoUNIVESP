{
  "name": "central-univesp",
  "version": "2.10.0",
  "description": "Gestão de atividades semanais e navegação inteligente no AVA da UNIVESP, com autopreenchimento SEI.",
  "main": "popup/popup.js",
  "type": "module",
  "scripts": {
    "build": "node scripts/build-dist.js",
    "dist": "npm run build",
    "check": "npm run lint && npm run type-check",
    "verify": "npm test && npm run lint && npm run type-check",
    "lint": "eslint . --cache --cache-location .cache/eslintcache --max-warnings=0",
    "lint:fix": "eslint . --cache --cache-location .cache/eslintcache --fix",
    "format": "prettier --write . --cache --cache-location .cache/prettiercache",
    "format:clean": "prettier --write . --list-different",
    "format:check": "prettier --check . --cache --cache-location .cache/prettiercache",
    "type-check": "tsc -p jsconfig.json --noEmit",
    "type-check:verbose": "tsc -p jsconfig.json --noEmit --listFiles | grep extensaoUNIVESP | grep -v node_modules",
    "test": "jest",
    "test:quick": "jest --onlyFailures",
    "test:debug": "jest --runInBand --verbose --detectOpenHandles",
    "test:stable": "jest --runInBand --no-cache",
    "test:coverage": "jest --coverage",
    "test:save": "node scripts/save-coverage.js",
    "test:watch": "jest --watch",
    "test:list": "jest --listTests",
    "test:ci": "jest --ci --coverage --runInBand",
    "test:unit": "jest --testPathIgnorePatterns=tests/integration",
    "test:integration": "jest tests/integration",
    "test:courses": "jest features/courses",
    "test:feedback": "jest features/feedback",
    "test:home": "jest features/home",
    "test:session": "jest features/session",
    "test:settings": "jest features/settings",
    "test:details-complex": "jest features/courses/tests/views/DetailsActivitiesWeekView.test.js features/courses/tests/services/WeekActivitiesService features/courses/tests/WeekActivitiesCache.test.js",
    "test:shared": "jest shared/",
    "security:secrets": "secretlint \"**/*\"",
    "security:audit": "npm audit --audit-level=high",
    "security:lint": "eslint . --max-warnings=0",
    "security": "npm run security:secrets && npm run security:audit && npm run security:lint",
    "precommit": "npm run security:secrets && lint-staged"
  },
  "author": "Gerson Santiago",
  "license": "MIT",
  "engines": {
    "node": "24.12.0",
    "npm": "11.7.0"
  },
  "packageManager": "npm@11.7.0",
  "devDependencies": {
    "@babel/preset-env": "^7.24.0",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.1",
    "@secretlint/quick-start": "^11.2.5",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "@types/chrome": "^0.1.32",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "babel-jest": "^30.2.0",
    "eslint": "^9.39.1",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "jest-webextension-mock": "^4.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          },
          "modules": "commonjs"
        }
      ]
    ]
  },
  "lint-staged": {
    "*.{js,mjs}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests --passWithNoTests",
      "bash -c \"npm run type-check\" --"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}